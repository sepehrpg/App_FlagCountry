<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
    <LinearLayout
        android:id="@+id/LineClik"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/shape1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:gravity="center|center_vertical"
            >
            <ImageView
                android:id="@+id/resimgLock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lock_outline"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            >

        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="3dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:id="@+id/resTitle"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:text="ایران"
                    android:textSize="17sp"
                    android:textColor="#000"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/resCapital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تهران"
                        android:textSize="15sp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="#3D3C3C"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/resCapitalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" پایتخت :"
                        android:textColor="#1B1B1B"
                        android:textSize="15sp"
                        />

                </LinearLayout>


            </LinearLayout>




            <ImageView
                android:id="@+id/resImageFlag"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                />



        </LinearLayout>


    </LinearLayout>

</LinearLayout>