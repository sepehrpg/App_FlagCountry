<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="30dp"
    android:layout_height="390dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/shape1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_monetization_on_black_24dp"
                    android:tint="#105213"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#6D0404"
                    android:text="برای دیدن این قسمت از برنامه باید مبلغی را پراخت کنید آیا مایل به پرداخت هستید ؟"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                >

                <TextView
                    android:onClick="yes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="بله"
                    android:textSize="30sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape1"
                    android:textColor="#6D0404"
                    android:id="@+id/yes"


                    />

                <TextView
                    android:id="@+id/no"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="خیر"
                    android:background="@drawable/shape1"
                    android:textSize="30sp"
                    android:textColor="#6D0404"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/edtDialog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:hint="Type..."
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="کد مهمان"
                    android:layout_weight="0.5"
                    android:textSize="30sp"
                    android:layout_margin="10dp"
                    android:textColor="#000"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/okmehman"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape1"
                    android:text="تایید کد مهمان "
                    android:textSize="30sp"
                    />


            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

